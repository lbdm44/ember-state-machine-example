<StyledContainer>
  <h3>State Two: {{this.title}}</h3>
  <label for="state-three-title">Title:</label>
  <Input
    @id="state-three-title"
    @type="text"
    @value={{this.title}}
  />
  <br>
  {{#if this.error}}
    <span class="input-error">
      {{this.error}}
    </span>
  {{/if}}
  <br>

  <button
    disabled={{this.error}}
    {{on "click" (fn @updateFlow "SELECT_THREE" this.title)}}
  >
    Go To Three
  </button>

  <button {{on "click" (fn @updateFlow "SELECT_FOUR" this.title)}}>Go To Four</button>

  <button {{on "click" (fn @updateFlow "SELECT_FIVE" this.title)}}>Go To Five</button>
</StyledContainer>